<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Lista Estudantil</title>
</head>

<body>
  <nav>
    <div>
      <a href="/">Inicio</a>
      <a href="/cursos">Cursos</a>
      <a class="selected" href="/estudiantes">Estudiantes</a>
    </div>
  </nav>

  <section>
    <div class="container">
      <div class="card-title">
        <div>
          <h1 class="line"><%=data.nombre%> <%=data.apellido%></h1>
          <p><%=data.codigo%></p>
        </div>
        <span>Cursos: <%= Object.keys(data.notas).length %></span>
      </div>

      <% for(nombreC in data.notas){ %>
        <ul class="list-group">
          <li>
            <p id="nameC"><%=nombreC%></p> 
            <% for(let i=0; i<(data.notas[nombreC]).length-1; i++) { %>
              <p><%=data.notas[nombreC][i]%></p>
            <% } %>
            <p id="total"><%= data.notas[nombreC][(data.notas[nombreC]).length-1] %></p>
          </li>
        </ul>
      <% } %>
    </div>
  </section>
</body>

</html>