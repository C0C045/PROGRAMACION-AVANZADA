<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <title>Estudiantes</title>
</head>

<body>
    <%- toasts %>
    <nav>
        <div>
            <a href="/">Inicio</a>
            <a href="/cursos">Cursos</a>
            <a class="selected"href="/estudiantes">Estudiantes</a>
        </div>
    </nav>

    <section>
        <div class="container">
            <div class="card-title">
                <h1>ESTUDIANTES</h1>
                <a href='/crearEstudiante'>Crear estudiante</a>
            </div>
        
            <ul class="list-group">
                <% data.forEach(function(estudiante){ %>
                    <a href="/estudiante/buscar/?codigo=<%= estudiante.codigo %>">
                        <li>
                            <div>
                                <h3><%= estudiante.nombre%> <%= estudiante.apellido %></h3>
                                <p class="tipo"><%= estudiante.codigo %></p>
                            </div>
                            <div>
                                <a href="/estudiante/eliminar/?codigo=<%= estudiante.codigo %>">
                                    <i class="delete fas fa-trash-alt"></i>
                                </a>
                                <a href="/actualizarEstudiante/?codigo=<%= estudiante.codigo %>">
                                    <i class="edit fas fa-edit"></i>
                                </a>
                            </div>
                        </li>
                    </a>
                <% }) %>
            </ul>
        </div>
    </section>
    <script src="https://kit.fontawesome.com/d382b224a2.js" crossorigin="anonymous"></script>
</body>

</html>