<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/css/toastr.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <title>Cursos</title>
</head>

<body>
    <%- toasts %>
    <nav>
        <div>
            <a href="/">Inicio</a>
            <a class="selected" href="/cursos">Cursos</a>
            <a href="/estudiantes">Estudiantes</a>
        </div>
    </nav>

    <section>
        <div class="container">
            <div class="card-title">
                <h1>CURSOS</h1>
                <a href='/crearCurso'>Crear curso</a>
            </div>
        
            <ul class="list-group">
                <% data.forEach(function(curso){ %>
                    <a href="/curso/buscar/?nombre=<%= curso.nombre %>">
                        <li>
                            <div>
                                <h3><%= curso.nombre %></h3>
                                <p class="tipo"><%= curso.tipo %></p>
                            </div>
                            <div>
                                <a href="/curso/eliminar/?nombre=<%= curso.nombre %>">
                                    <i class="delete fas fa-trash-alt"></i>
                                </a>
                                <a href="/actualizarCurso/?nombre=<%= curso.nombre %>">
                                    <i class="edit fas fa-edit"></i>
                                </a>
                            </div>
                        </li>
                    </a>
                <% }) %>
            </ul>
        </div>
    </section>
    <script src="https://kit.fontawesome.com/d382b224a2.js" crossorigin="anonymous"></script>
</body>

</html>